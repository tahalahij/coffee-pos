{
  "name": "cafe-pos",
  "version": "1.0.0",
  "description": "Modern Cafe Point of Sale System",
  "scripts": {
    "dev": "concurrently \"npm run dev:frontend\" \"npm run dev:backend\"",
    "dev:frontend": "cd frontend && npm run dev",
    "dev:backend": "cd backend && npm run start:dev",
    "build": "npm run build:frontend && npm run build:backend",
    "build:frontend": "cd frontend && npm run build",
    "build:backend": "cd backend && npm run build",
    "install:all": "npm install && cd frontend && npm install && cd ../backend && npm install && cd ../desktop && npm install",
    "db:migrate": "cd backend && npm run migration:run",
    "db:seed": "cd backend && npm run seed",
    "desktop:dev": "cd desktop && npm run dev",
    "desktop:build": "cd desktop && npm run build:all",
    "desktop:build:windows": "cd desktop && build.bat",
    "desktop:build:unix": "cd desktop && bash build.sh"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "dependencies": {
    "@nestjs/common": "^11.1.6",
    "@nestjs/config": "^4.0.2",
    "@nestjs/swagger": "^11.2.0",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.2"
  }
}
